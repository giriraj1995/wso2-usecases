<?xml version="1.0" encoding="UTF-8"?>
<api context="/event2" name="AlertAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST">
        <inSequence>
            <log description="AlertLog" level="full">
                <property expression="json-eval($)" name="body"/>
            </log>
            <send>
                <endpoint>
                    <http method="post" uri-template="http://localhost:8280/pubsub2">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </send>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
